package com.example.api_gateway;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.client.discovery.EnableDiscoveryClient;
import org.springframework.cloud.gateway.route.RouteLocator;
import org.springframework.cloud.gateway.route.builder.RouteLocatorBuilder;
import org.springframework.context.annotation.Bean;

@SpringBootApplication
@EnableDiscoveryClient
public class ApiGatewayApplication {

	public static void main(String[] args) {
		SpringApplication.run(ApiGatewayApplication.class, args);
	}

	@Bean
	public RouteLocator routes(RouteLocatorBuilder builder) {
		return builder.routes()
				.route("user-service", r -> r.path("/api/users/**")
						.filters(f -> f.stripPrefix(1))
						.uri("lb://USER-SERVICE"))
				.route("course-service", r -> r.path("/api/courses/**")
						.filters(f -> f.stripPrefix(1))
						.uri("lb://COURSE-SERVICE"))
				.route("classroom-service", r -> r.path("/api/classrooms/**")
						.filters(f -> f.stripPrefix(1))
						.uri("lb://CLASSROOM-SERVICE")) // Using the correct service name
				.route("assessment-service", r -> r.path("/api/assessments/**")
						.filters(f -> f.stripPrefix(1))
						.uri("lb://ASSESSMENT-SERVICE"))
				.route("notification-service", r -> r.path("/api/notifications/**")
						.filters(f -> f.stripPrefix(1))
						.uri("lb://NOTIFICATION-SERVICE")) // Changed path for consistency
				.build();
	}
}
